<UserControl
			x:Class="DivinityModManager.Views.HorizontalModLayout"
			xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			xmlns:local="clr-namespace:DivinityModManager.Views"
			xmlns:vm="clr-namespace:DivinityModManager.ViewModels"
			xmlns:data="clr-namespace:DivinityModManager.Models;assembly=DivinityModManagerCore"
			xmlns:dd="urn:gong-wpf-dragdrop"
			mc:Ignorable="d" 
			d:DesignHeight="450" d:DesignWidth="800"
>
	<UserControl.Resources>
		<ResourceDictionary Source="pack://application:,,,/DivinityModManager;component/Views/MainResourceDictionary.xaml" />
	</UserControl.Resources>
	<Grid>
		<Grid.Resources>

		</Grid.Resources>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="4" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid Grid.Column="0" HorizontalAlignment="Stretch">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="4"/>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<TextBlock Text="Active Mods" Padding="4" />
				<Border Grid.Column="2" BorderBrush="Black" BorderThickness="1" Width="16" Height="16">
					<Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="#FF91FF91">
						<Rectangle.ToolTip>
							<ToolTip>
								<TextBlock Text="Green mods are editor projects, rather than paks located in your mod directory." TextWrapping="Wrap" />
							</ToolTip>
						</Rectangle.ToolTip>
					</Rectangle>
				</Border>
			</Grid>
			<ListView ItemsSource="{Binding ActiveMods}" Style="{StaticResource ModOrderListView}" Grid.Row="1"
					dd:DragDrop.IsDragSource="True" dd:DragDrop.IsDropTarget="True"
					View="{DynamicResource ModGridView}" GridViewColumnHeader.Click="ListView_Click"
			/>
		</Grid>
		<GridSplitter Grid.Column="1" Width="4" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
		<Grid Grid.Column="2" HorizontalAlignment="Stretch" >
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<TextBlock Text="Inactive Mods" Padding="4" />
			<ListView ItemsSource="{Binding InactiveMods}" Style="{StaticResource ModOrderListView}" Grid.Row="1"
					dd:DragDrop.IsDragSource="True" dd:DragDrop.IsDropTarget="True"
					View="{DynamicResource InactiveModGridView}" GridViewColumnHeader.Click="ListView_Click"
			/>
		</Grid>
	</Grid>
</UserControl>
